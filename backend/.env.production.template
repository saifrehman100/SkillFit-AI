# SkillFit AI - Production Environment Template
# Copy this file and fill in the values for production deployment

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_NAME="SkillFit AI - Resume Matcher"
APP_VERSION="1.0.0"
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO

# ============================================
# SERVER SETTINGS (Railway will provide PORT)
# ============================================
HOST=0.0.0.0
PORT=${PORT}
WORKERS=2

# ============================================
# DATABASE - Neon PostgreSQL
# ============================================
# Get from: https://neon.tech (after creating project)
# Format: postgresql://user:password@host/dbname?sslmode=require
DATABASE_URL=postgresql://YOUR_NEON_USER:YOUR_NEON_PASSWORD@YOUR_NEON_HOST/neondb?sslmode=require

# ============================================
# REDIS - Upstash
# ============================================
# Get from: https://upstash.com (after creating Redis database)
# Format: rediss://default:password@host:port
REDIS_URL=rediss://default:YOUR_UPSTASH_PASSWORD@YOUR_UPSTASH_HOST:YOUR_UPSTASH_PORT
CELERY_BROKER_URL=${REDIS_URL}/0
CELERY_RESULT_BACKEND=${REDIS_URL}/1

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate with: openssl rand -hex 32
SECRET_KEY=YOUR_SECRET_KEY_HERE_GENERATE_WITH_OPENSSL
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# LLM API KEYS
# ============================================
# Anthropic Claude - Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google Gemini - Get from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=YOUR_GOOGLE_API_KEY

# OpenAI-compatible API (optional)
OPENAI_COMPATIBLE_BASE_URL=
OPENAI_COMPATIBLE_API_KEY=

# ============================================
# DEFAULT LLM SETTINGS
# ============================================
DEFAULT_LLM_PROVIDER=gemini
DEFAULT_MODEL_NAME=gemini-2.0-flash-exp
DEFAULT_TEMPERATURE=0.3
DEFAULT_MAX_TOKENS=4096

# ============================================
# EMBEDDINGS
# ============================================
EMBEDDINGS_PROVIDER=sentence_transformers
EMBEDDINGS_MODEL=all-MiniLM-L6-v2
EMBEDDINGS_DIMENSIONS=384

# ============================================
# VECTOR DATABASE
# ============================================
ENABLE_VECTOR_SEARCH=True

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================
# FILE UPLOAD
# ============================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,docx,txt

# ============================================
# GCP CLOUD STORAGE (using your credits)
# ============================================
# Get from GCP Console after setting up Cloud Storage
GCP_PROJECT_ID=YOUR_GCP_PROJECT_ID
GCP_BUCKET_NAME=skillfit-ai-resumes
GCS_CREDENTIALS_JSON={"type":"service_account","project_id":"..."}

# ============================================
# BATCH PROCESSING
# ============================================
MAX_BATCH_SIZE=100
BATCH_TIMEOUT_SECONDS=300

# ============================================
# COST TRACKING
# ============================================
ENABLE_COST_TRACKING=True

# ============================================
# MONITORING
# ============================================
ENABLE_METRICS=True
METRICS_PORT=9090

# ============================================
# CORS SETTINGS
# ============================================
# Your Vercel frontend URL (e.g., https://skillfit-ai.vercel.app)
ALLOWED_ORIGINS=https://YOUR_VERCEL_DOMAIN.vercel.app,https://www.YOUR_DOMAIN.com

# ============================================
# MISC
# ============================================
PASSLIB_MAX_PASSWORD_SIZE=4096
